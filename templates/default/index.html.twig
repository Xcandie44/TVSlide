{% extends 'base.html.twig' %}

{% block title %}Главная{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .div-main { border: 1px solid black; max-width: 1100px; margin: 0 auto; text-align: center; align-items: center; }
    .div-block { text-align: center; align-items: center; margin-bottom: 70px; display: flex; flex-wrap: wrap; justify-content: center; }
    .slide { margin: 5px; width: auto; height: 150px; }
    .enter { padding: 10px 15px;
             width: 50px;
             text-decoration: none;
             color: white;
             letter-spacing: 1px;
             display: block;
             border-right: 1px solid black;
             border-bottom: 1px solid black;
             background-color: black; }
</style>

<div class="div-main">
    <a class="enter" href="/admin/login">Вход</a>
    {% for key, build in buildings %}
        {% set count = 0 %}
        <h1>{{ build.name|e }}</h1>
        <div class="div-block">
        {% for key, slide in build.getSlides() %}
            {% if slide.getIsVideo() %}
                <video height="150px" controls="controls">
                    <source src="{{ slide.url|e }}" type="video/mp4">
                </video>
            {% else %}
                <img class="slide" src='{{ slide.url|e }}'></img>
            {% endif %}
        {% endfor %}
        </div>
    {% endfor %}
</div>
{% endblock %}
